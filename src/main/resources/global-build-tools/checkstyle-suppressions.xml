<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC "-//Puppy Crawl//DTD Suppressions 1.1//EN" "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">
<suppressions>

  <!-- Required in unit tests e.g. for public JUnit rule variables -->
  <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/]test[\\/]"/>

  <!-- Do not check line lengths for unit tests -->
  <suppress checks="LineLength" files=".*[\\/]src[\\/]test[\\/]"/>

  <!-- Do not check javadocs in unit tests -->
  <suppress checks="Javadoc" files=".*[\\/]src[\\/]test[\\/]"/>

  <!-- Do not check JUnit outside unit tests -->
  <suppress checks="JUnitTestCase" files=".*[\\/]src[\\/]main[\\/]"/>

</suppressions>
